<% if @callback_type == 'fission' %>
Configuration.new do
  fission do
    sources do
      <%= @service_name %>.type 'actor'
      test.type 'spec'
    end

    workers.<%= @service_name %> 1

    loaders do
      sources ['carnivore-actor']
      workers ['fission-<%= @orig_service_name %>/<%= @module_name %>']
    end
  end
end
<% else %>
Configuration.new do
  jackal do
    require ["carnivore-actor", "jackal-<%= @orig_service_name %>"]

    mail do
      config do
      end

      sources do
        input  { type 'actor' }
        output { type 'spec' }
      end

      callbacks ['Jackal::<%= @service_class_name %>::<%= @module_class_name %>']
    end
  end
end
<% end %>
